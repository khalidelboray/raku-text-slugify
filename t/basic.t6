        is $r, '404';
    }
    
    subtest 'test numbers and symbols' => {
        my $txt = '1,000 reasons you are #1';
        my $r = slugify $txt;
        is $r, '1000-reasons-you-are-1';
    }
    
    subtest 'test regex pattern keep underscore' => {
